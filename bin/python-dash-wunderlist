#!/usr/bin/env python3
# -*- coding: utf-8 -*-
import argparse
import sys
import logging

from python_dash_wunderlist import __version__
from python_dash_wunderlist.app import PythonDashWunderlist


__author__ = "fvo"
__copyright__ = "fvo"
__license__ = "mit"

_logger = logging.getLogger(__name__)

def parse_args(args):
    """Parse command line parameters

    Args:
      args ([str]): command line parameters as list of strings

    Returns:
      :obj:`argparse.Namespace`: command line parameters namespace
    """
    parser = argparse.ArgumentParser(
        description="python-dash-wunderlist")
    parser.add_argument(
        '--version',
        action='version',
        version='python-dash-wunderlist {ver}'.format(ver=__version__))
    parser.add_argument(
        '-v',
        '--verbose',
        dest="loglevel",
        help="set loglevel to INFO",
        action='store_const',
        const=logging.INFO)
    parser.add_argument(
        '-vv',
        '--very-verbose',
        dest="loglevel",
        help="set loglevel to DEBUG",
        action='store_const',
        const=logging.DEBUG)
    return parser.parse_args(args)




if __name__ == "__main__":
    args = parse_args(sys.argv[1:])
    app = PythonDashWunderlist(args.loglevel)
